pipeline {
    agent any

    stages {
        stage('gitclone') {
            steps {
                git url: 'https://gitlab.com/armcool007/java-war-diff-2-project.git', branch: 'frontend'
            }
        }
        stage ("docker-build") {
            steps {
                sh 'docker build -t armcool004/angular_frontend .'
            }
        }
        stage ("docker push") {
            steps {
                withCredentials([string(credentialsId: 'dockerID', variable: 'dockerPass')]) {
                    sh 'docker login -u armcool004 -p $dockerPass'
                    sh 'docker push armcool004/angular_frontend'
                }
            }
        }
        stage ("k8s deploy") {
            steps {
                sh 'kubectl apply -f frontend_deployment.yml'
            }
        }
    }
}
